{
	"rules": {
		"token_config": {
			"lists": ["TokensConfig"],
			"handlers": [
				{
					"type": "union_fields",
					"config": {
						"name": "restore",
						"union_type": "map",
						"fields": ["restore_timer", "restore_value", "restore_max"],
						"alias": ["timer", "value", "max"]
					}
				},
				{
					"type": "add_id_as_field",
					"config": {
						"id": "name"
					}
				}
			]
		},

		"token_groups": {
			"lists": ["TokenGroups"],
			"handlers": [
				{
					"type": "tokens",
					"config": {
						"fields": ["token1", "token2", "token3", "token4"]
					}
				}
			]
		},

		"token_lots": {
			"lists": ["Lots"]
		},

		"iaps_android": {
			"lists": ["Iaps"],
			"handlers": [
				{
					"type": "remove_fields",
					"config": {
						"fields": ["ident_ios"]
					}
				},
				{
					"type": "rename_fields",
					"config": {
						"keys": {
							"ident_android": "ident"
						}
					}
				}
			],
			"save_param": {
				"name": "iaps"
			}
		},

		"iaps_ios": {
			"lists": ["Iaps"],
			"handlers": [
				{
					"type": "remove_fields",
					"config": {
						"fields": ["ident_android"]
					}
				},
				{
					"type": "rename_fields",
					"config": {
						"keys": {
							"ident_ios": "ident"
						}
					}
				}
			],
			"save_param": {
				"name": "iaps"
			}
		},

		"offers": {
			"lists": ["Offers"]
		},

		"festivals": {
			"lists": ["Festivals"]
		},

		"trucks": {
			"lists": ["Trucks"]
		},

		"labels": {
			"lists": ["Labels"],
			"handlers": [
				{
					"type": "union_fields",
					"config": [
						{
							"name": "spec_cond",
							"union_type": "array",
							"fields": ["spec_cond1", "spec_cond2", "spec_cond3"]
						},
						{
							"name": "token_cond",
							"union_type": "array",
							"fields": ["token_cond1", "token_cond2", "token_cond3"]
						}
					]
				}
			]
		},

		"quests": {
			"lists": ["Quests"],
			"handlers": [
				{
					"type": "tokens",
					"config": [
						{
							"id": "required_tokens",
							"fields": ["required_tokens"]
						},
						{
							"id": "reward",
							"fields": ["reward"]
						}
					]
				},
				{
					"type": "quest_tasks",
					"config": {
						"id": "tasks",
						"fields": ["task1", "task2", "task3"]
					}
				},
				{
					"type": "ensure_array",
					"config": {
						"field": "required_quests"
					}
				}
			]
		}
	}
}
